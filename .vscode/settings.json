{

    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "python.defaultInterpreterPath": ".venv/bin/python3", // Or let VS Code auto-detect if venv is in workspace
    "python.venvPath": ".venv", // Corrected path - venv should be in project
    "python.languageServer": "Pylance",
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "."
    ],
    // "ruff.lint.run": "onSave",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.pytest_cache":true,
        "**/__pycache__": true,
        "**/*.egg-info": true,
    }
}